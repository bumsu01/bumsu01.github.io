{
  "root": true,
  "extends": ["bumsu", "plugin:storybook/recommended"],
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          ["sibling", "index", "object", "type"]
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "builtin"
          },
          {
            "pattern": "next",
            "group": "builtin"
          },

          {
            "pattern": "next/**",
            "group": "builtin"
          },
          {
            "pattern": "@storybook/**",
            "group": "builtin",
            "position": "after"
          },
          {
            "pattern": "@bumsu/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": [
          "react",
          "next",
          "next/**",
          "storybook/**",
          "@bumsu/**",
          "@/**"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
